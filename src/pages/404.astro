---
import Layout from "@/layouts/Layout.astro";

import { getCookie } from "@/lib/cookies";

const token = getCookie(Astro.request, "token");

const href = token ? "/admin/db" : "/";
const message = token
    ? "← Volver a la base de datos"
    : "← Volver a la página principal";
---

<Layout title="Página no encontrada - 404" description="Página no encontrada - Capsulin">
    <main class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
        <div class="max-w-md w-full text-center">
            <!-- Error -->
            <div class="mb-8">
                <h1 class="text-9xl font-bold text-blue-900 mb-4">404</h1>
                <h2 class="text-2xl font-semibold text-gray-700 mb-4">
                    Página no encontrada
                </h2>
                <p class="text-gray-600">
                    Verifica la URL o regresa a la página principal.
                </p>
            </div>

            <!-- Volver al Inicio -->
            <div class="space-y-4">
                <a href={href} class="w-full bg-blue-800 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-700 focus:ring-offset-2">
                    {message}
                </a>
            </div>
        </div>
    </main>
</Layout>