// filepath: c:\Users\Héctor Monagas\Documents\VisualStudioCodeProjects\Capsulin\src\pages\index.astro
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Capsulin" descripcion="Asistente de Farmacia de Drotaca C.A.">
    <style>
        .med-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .med-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        .symptom-chip {
            transition: all 0.2s ease;
        }
        .symptom-chip:hover {
            background-color: #2563eb;
            color: white;
        }
    </style>

    <!-- Botón ir a la base de datos -->
    <div class="w-full flex justify-center pt-4">
        <a
            href="/admin/db"
            class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition font-semibold text-sm"
        >
            Ir a la base de datos
        </a>
    </div>

    <main
        class="container mx-auto max-w-5xl px-4 py-6 flex-1 flex flex-col md:flex-row gap-6"
    >
        <!-- Panel de Información -->
        <div
            class="hidden lg:block md:w-1/3 bg-white rounded-3xl shadow-md p-6 h-fit"
        >
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
                Información de salud
            </h2>

            <div class="mb-6">
                <h3 class="font-medium text-blue-600 mb-2 flex items-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-2"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z"
                            clip-rule="evenodd"></path>
                    </svg>
                    Sugerencias de preguntas
                </h3>
                <div class="space-y-2">
                    <button
                        id="quick-q1"
                        class="text-left w-full text-sm px-3 py-2 bg-blue-50 rounded-lg hover:bg-blue-100 transition"
                        >¿Qué puedo tomar para el dolor de cabeza?</button
                    >
                    <button
                        id="quick-q2"
                        class="text-left w-full text-sm px-3 py-2 bg-blue-50 rounded-lg hover:bg-blue-100 transition"
                        >¿Cuáles son los efectos secundarios del paracetamol?</button
                    >
                    <button
                        id="quick-q3"
                        class="text-left w-full text-sm px-3 py-2 bg-blue-50 rounded-lg hover:bg-blue-100 transition"
                        >Tengo fiebre, ¿qué debo hacer?</button
                    >
                    <button
                        id="quick-q4"
                        class="text-left w-full text-sm px-3 py-2 bg-blue-50 rounded-lg hover:bg-blue-100 transition"
                        >¿Cuánto tiempo tarda en hacer efecto el ibuprofeno?</button
                    >
                </div>
            </div>

            <div class="mb-6">
                <h3 class="font-medium text-blue-600 mb-2 flex items-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-2"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                        ></path>
                    </svg>
                    Medicamentos populares
                </h3>
                <div class="grid grid-cols-2 gap-3">
                    <div
                        class="med-card bg-gray-50 p-3 rounded-lg shadow-sm transition-all duration-300 ease-in-out"
                        id="show-med-paracetamol"
                    >
                        <div class="font-medium text-gray-800">Paracetamol</div>
                        <div class="text-xs text-gray-500">Analgésico</div>
                    </div>
                    <div
                        class="med-card bg-gray-50 p-3 rounded-lg shadow-sm"
                        id="show-med-ibuprofeno"
                    >
                        <div class="font-medium text-gray-800">Ibuprofeno</div>
                        <div class="text-xs text-gray-500">
                            Antiinflamatorio
                        </div>
                    </div>
                    <div
                        class="med-card bg-gray-50 p-3 rounded-lg shadow-sm"
                        id="show-med-loratadina"
                    >
                        <div class="font-medium text-gray-800">Loratadina</div>
                        <div class="text-xs text-gray-500">Antihistamínico</div>
                    </div>
                    <div
                        class="med-card bg-gray-50 p-3 rounded-lg shadow-sm"
                        id="show-med-omeprazol"
                    >
                        <div class="font-medium text-gray-800">Omeprazol</div>
                        <div class="text-xs text-gray-500">
                            Protector gástrico
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <h3 class="font-medium text-blue-600 mb-2 flex items-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-2"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                            clip-rule="evenodd"></path>
                    </svg>
                    Síntomas comunes
                </h3>
                <div class="flex flex-wrap gap-2">
                    <span
                        id="symptom-chip-1"
                        class="symptom-chip text-xs px-3 py-1 bg-gray-100 rounded-full cursor-pointer"
                        >Dolor de cabeza</span
                    >
                    <span
                        id="symptom-chip-2"
                        class="symptom-chip text-xs px-3 py-1 bg-gray-100 rounded-full cursor-pointer"
                        >Fiebre</span
                    >
                    <span
                        id="symptom-chip-3"
                        class="symptom-chip text-xs px-3 py-1 bg-gray-100 rounded-full cursor-pointer"
                        >Tos seca</span
                    >
                    <span
                        id="symptom-chip-4"
                        class="symptom-chip text-xs px-3 py-1 bg-gray-100 rounded-full cursor-pointer"
                        >Dolor de garganta</span
                    >
                    <span
                        id="symptom-chip-5"
                        class="symptom-chip text-xs px-3 py-1 bg-gray-100 rounded-full cursor-pointer"
                        >Congestión nasal</span
                    >
                    <span
                        id="symptom-chip-6"
                        class="symptom-chip text-xs px-3 py-1 bg-gray-100 rounded-full cursor-pointer"
                        >Dolor muscular</span
                    >
                </div>
            </div>
        </div>

        <!-- Tarjeta de chat -->
        <div
            class="bg-white mx-auto md:w-4xl rounded-3xl shadow-lg overflow-hidden"
        >
            <!-- Encabezado -->
            <div class="bg-white text-white p-4 border-b border-gray-200">
                <div class="flex items-center">
                    <div
                        class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3"
                    >
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            aria-label="Capsulin logo"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <rect
                                x="4"
                                y="4"
                                width="16"
                                height="16"
                                rx="8"
                                fill="#2563eb"></rect>
                            <rect
                                x="8"
                                y="12"
                                width="8"
                                height="6"
                                rx="3"
                                fill="#fff"></rect>
                            <circle cx="12" cy="9" r="3" fill="#fff"></circle>
                            <circle cx="12" cy="9" r="1.5" fill="#2563eb"
                            ></circle>
                        </svg>
                    </div>
                    <div>
                        <h2 class="font-semibold text-gray-800 text-3xl">
                            Capsulin
                        </h2>
                        <p class="text-sm text-gray-500">
                            Asistente Farmacéutico
                        </p>
                    </div>
                </div>
            </div>

            <!-- Área de mensajes -->
            <div
                id="chat-container"
                class="h-138 p-4 overflow-y-auto space-y-4"
            >
            </div>

            <!-- Busqueada -->
            <div class="p-5 border-t border-gray-200">
                <div class="relative">
                    <input
                        type="text"
                        id="user-input"
                        placeholder="Escribe tu pregunta aquí..."
                        class="w-full p-2 pr-12 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <button
                        id="submit-button"
                        class="absolute right-3 top-1/2 transform -translate-y-1/2 text-blue-600 hover:text-blue-800 transition"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                        </svg>
                    </button>
                </div>
                <div class="mt-2 mb-0 text-xs text-gray-500 text-center">
                    <p>
                        Este asistente no sustituye el consejo médico
                        profesional.
                    </p>
                </div>
            </div>
        </div>
    </main>

    <script type="module" src="/assets/js/quickQuestions.js"></script>
    <script type="module" src="/assets/js/main.js"></script>
</Layout>
