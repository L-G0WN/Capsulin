---
import { Link } from '@lucide/astro';
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Formulario de Relaciones -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="p-6">
            <h2 class="text-xl font-semibold flex items-center gap-2">
                <span class="inline-block w-5 h-5 text-blue-600">
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                    </svg>
                </span>
                Crear Relación
            </h2>
            <p class="text-gray-600 mt-1">
                Relaciona un síntoma con un medicamento y su intensidad
            </p>
        </div>
        <div class="pb-6 pr-6 pl-6">
            <form id="relaciones-form" class="space-y-4">
                <div>
                    <label for="relacion-sintoma" class="block text-sm font-medium text-gray-700 mb-2">
                        Síntoma
                    </label>
                    <select id="relacion-sintoma" name="relacion_sintoma" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required >
                        <option value="">Selecciona un síntoma</option>
                    </select>
                </div>
                <div>
                    <label for="relacion-medicamento" class="block text-sm font-medium text-gray-700 mb-2">
                        Medicamento
                    </label>
                    <select id="relacion-medicamento" name="relacion_medicamento" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required >
                        <option value="">Selecciona un medicamento</option>
                    </select>
                </div>
                <div>
                    <label for="relacion_intensidad" class="block text-sm font-medium text-gray-700 mb-2">
                        Intensidad del Dolor
                    </label>
                    <div class="flex flex-col gap-2">
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="relacion_intensidad" value="Normal" class="form-checkbox text-blue-600" />
                            <span class="ml-2 text-sm">Normal</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="relacion_intensidad" value="Media" class="form-checkbox text-blue-600" />
                            <span class="ml-2 text-sm">Media</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="checkbox" name="relacion_intensidad" value="Muy Fuerte" class="form-checkbox text-blue-600" />
                            <span class="ml-2 text-sm">Muy Fuerte</span>
                        </label>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">Puedes seleccionar una o varias intensidades.</p>
                </div>
                <button id="btn-crear-relacion" type="submit" class="w-full bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-950 transition-colors flex items-center justify-center gap-2">
                    <span class="inline-block w-4 h-4 text-white">
                        <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round"  stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </span>
                    Crear Relación
                </button>
                <p id="relacion-warning" class="text-sm text-gray-500 text-center hidden">
                    Necesitas registrar al menos un síntoma y un medicamento
                    para crear relaciones
                </p>
            </form>
        </div>
    </div>

    <!-- Lista de Relaciones -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="pr-6 pl-6 pt-6">
            <h2 class="text-xl font-semibold">
                <Link class="w-6 h-6 inline mr-1 text-blue-800" />
                Relaciones Registradas</h2>
            <p class="text-gray-600 mt-1">
                <span id="total-relaciones"></span>
            </p>
            <!-- Buscador de relaciones -->
            <div class="mt-4">
                <input type="text" id="buscador-relaciones" placeholder="Buscar relación..." class="w-full px-1 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
        </div>
        <div class="p-6">
            <!-- Tabla de relaciones -->
            <div class="overflow-x-auto">
                <div class="max-h-72 overflow-y-auto">
                    <table class="min-w-full divide-y divide-gray-200" id="tabla-relaciones">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Síntoma</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Medicamento</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Intensidad</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                            </tr>
                        </thead>
                        <tbody id="relaciones-list">

                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Paginación relaciones -->
            <div id="rel-paginacion" class="flex justify-center items-center mt-4"></div>
        </div>
    </div>
</div>

<script type="module" src="/assets/js/Relaciones.js"></script>