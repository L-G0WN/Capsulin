---
import { Link } from '@lucide/astro';
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Formulario de Relaciones -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="p-6">
            <h2 class="text-xl font-semibold flex items-center gap-2">
                <span class="inline-block w-5 h-5 text-blue-600">
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                    </svg>
                </span>
                Crear Relación
            </h2>
            <p class="text-gray-600 mt-1">
                Relaciona un síntoma con un medicamento y su intensidad
            </p>
        </div>
        <div class="pb-6 pr-6 pl-6">
            <form id="relaciones-form" class="space-y-4">
                <div>
                    <label for="relacion-sintoma" class="block text-sm font-medium text-gray-700 mb-2">
                        Síntoma
                    </label>
                    <select id="relacion-sintoma" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required >
                        <option value="">Selecciona un síntoma</option>
                    </select>
                </div>
                <div>
                    <label for="relacion-medicamento" class="block text-sm font-medium text-gray-700 mb-2">
                        Medicamento
                    </label>
                    <select id="relacion-medicamento" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required >
                        <option value="">Selecciona un medicamento</option>
                    </select>
                </div>
                <div>
                    <label for="relacion-intensidad" class="block text-sm font-medium text-gray-700 mb-2">
                        Intensidad del Dolor
                    </label>
                    <select id="relacion-intensidad" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required >
                        <option value="">Selecciona la intensidad</option>
                        <option value="Baja">Baja</option>
                        <option value="Media">Media</option>
                        <option value="Alta">Alta</option>
                    </select>
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="flex-1 bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-950 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round"  stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </span>
                        Crear
                    </button>
                    <button type="button" class="flex-1 bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 11l6 6M3 21h18"></path>
                            </svg>
                        </span>
                        Editar
                    </button>
                    <button type="button" class="flex-1 bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </span>
                        Eliminar
                    </button>
                </div>
                <p id="relacion-warning" class="text-sm text-gray-500 text-center hidden">
                    Necesitas registrar al menos un síntoma y un medicamento
                    para crear relaciones
                </p>
            </form>
        </div>
    </div>

    <!-- Lista de Relaciones -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="pr-6 pl-6 pt-6">
            <h2 class="text-xl font-semibold">
                <Link class="w-6 h-6 inline mr-1 text-blue-800" />
                Relaciones Registradas</h2>
            <p class="text-gray-600 mt-1">
                Total de relaciones: <span id="relaciones-count">0</span> relaciones
            </p>
            <!-- Buscador de relaciones -->
            <div class="mt-4">
                <input type="text" id="buscador-relaciones" placeholder="Buscar relación..." class="w-full px-1 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
        </div>
        <div class="p-6">
            <!-- Tabla de relaciones -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200" id="tabla-relaciones">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Síntoma</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Medicamento</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Intensidad</th>
                        </tr>
                    </thead>
                    <tbody id="relaciones-list">
                        <tr>
                            {
                                /* Aquí se insertarán las relaciones dinámicamente */
                            }
                            <td colspan="3" class="text-gray-500 text-center py-4">
                                No hay relaciones registradas
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
