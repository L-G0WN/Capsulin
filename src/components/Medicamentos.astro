---
import { Pill } from '@lucide/astro';
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Formulario de Medicamentos -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="p-6">
            <h2 class="text-xl font-semibold flex items-center gap-2">
                <span class="inline-block w-5 h-5 text-blue-600">
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                    </svg>
                </span>
                Agregar Medicamento
            </h2>
            <p class="text-gray-600 mt-1">
                Registra un nuevo medicamento con sus propiedades
            </p>
        </div>
        <div class="pb-6 pr-6 pl-6">
            <form id="medicamentos-form" class="space-y-4">
                <div>
                    <label for="medicamento-nombre" class="block text-sm font-medium text-gray-700 mb-2">
                        Nombre del Medicamento
                    </label>
                    <input type="text" id="medicamento-nombre" placeholder="Fixadol X 20 Cápsulas" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                </div>
                <div>
                    <label for="medicamento-activo" class="block text-sm font-medium text-gray-700 mb-2">
                        Principios Activos
                    </label>
                    <input type="text" id="medicamento-activo" placeholder="Diclofenac Potásico 50 mg" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                </div>
                <div>
                    <label for="medicamento-efectos" class="block text-sm font-medium text-gray-700 mb-2">
                        Efectos
                    </label>
                    <textarea id="medicamento-efectos" placeholder="Se utiliza para aliviar el dolor y reducir la inflamación en condiciones como la artritis, la gota y la tendinitis." rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required></textarea>
                </div>
                <div>
                    <label for="medicamento-categoria" class="block text-sm font-medium text-gray-700 mb-2">
                        Categorías
                    </label>
                    <input type="text" id="medicamento-categoria" placeholder="Analgésicos, Antipiréticos, Antiinflamatorios " class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="flex-1 bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-950 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round"  stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </span>
                        Agregar
                    </button>
                    <button type="button" class="flex-1 bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 11l6 6M3 21h18"></path>
                            </svg>
                        </span>
                        Editar
                    </button>
                    <button type="button" class="flex-1 bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </span>
                        Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Medicamentos -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="pr-6 pl-6 pt-6">
            <h2 class="text-xl font-semibold">
                <Pill class="w-6 h-6 inline mr-1 text-blue-800" />
                Medicamentos Registrados</h2>
            <p class="text-gray-600 mt-1">
                Total de medicamentos: <span id="medicamentos-count">0</span> medicamentos
            </p>
            <!-- Buscador de medicamentos -->
            <div class="mt-4">
                <input type="text" id="buscador-medicamentos" placeholder="Buscar medicamento..." class="w-full px-1 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
        </div>
        <div class="p-6">
            <!-- Tabla de medicamentos -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200" id="tabla-medicamentos">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Principios Activos</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Efectos</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categorías</th>
                        </tr>
                    </thead>
                    <tbody id="medicamentos-list">
                        <tr>
                            {
                                /* Aquí se insertarán los medicamentos dinámicamente */
                            }
                            <td colspan="4" class="text-gray-500 text-center py-4">
                                No hay medicamentos registrados
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
