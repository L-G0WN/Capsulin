---
import { Pill } from '@lucide/astro';

const { 
    sintPage = 1,
    medicamentos = [], medPage = 1, medTotal = 0,
    relPage = 1,
    PAGE_SIZE = 0
    } = Astro.props;
---


<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Formulario de Medicamentos -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="p-6">
            <h2 class="text-xl font-semibold flex items-center gap-2">
                <span class="inline-block w-5 h-5 text-blue-600">
                    <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                    </svg>
                </span>
                Agregar Medicamento
            </h2>
            <p class="text-gray-600 mt-1">
                Registra un nuevo medicamento con sus propiedades
            </p>
        </div>
        <div class="pb-6 pr-6 pl-6">
            <form id="medicamentos-form" class="space-y-4">
                <div>
                    <label for="medicamento-nombre" class="block text-sm font-medium text-gray-700 mb-2">
                        Nombre del Medicamento
                    </label>
                    <input type="text" id="medicamento-nombre" name="medicamento_nombre" placeholder="Fixadol X 20 Cápsulas" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                </div>
                <div>
                    <label for="medicamento-activo" class="block text-sm font-medium text-gray-700 mb-2">
                        Principios Activos
                    </label>
                    <input type="text" id="medicamento-activo" name="medicamento_activo" placeholder="Diclofenac Potásico 50 mg" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                </div>
                <div>
                    <label for="medicamento-efectos" class="block text-sm font-medium text-gray-700 mb-2">
                        Efectos
                    </label>
                    <textarea id="medicamento-efectos" name="medicamento_efectos" placeholder="Se utiliza para aliviar el dolor y reducir la inflamación en condiciones como la artritis, la gota y la tendinitis." rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required></textarea>
                </div>
                <div>
                    <label for="medicamento-categorias" class="block text-sm font-medium text-gray-700 mb-2">
                        Categorías
                    </label>
                    <input type="text" id="medicamento-categorias" name="medicamento_categorias" placeholder="Analgésicos, Antipiréticos, Antiinflamatorios " class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                </div>
                <div class="flex flex-col gap-2 sm:flex-row">
                    <button id="btn-agregar-medicamento" type="submit" class="flex-1 bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-950 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round"  stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </span>
                        Agregar
                    </button>
                    <button id="btn-editar-medicamento" type="button" class="flex-1 bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 11l6 6M3 21h18"></path>
                            </svg>
                        </span>
                        Editar
                    </button>
                    <button id="btn-eliminar-medicamento" type="button" class="flex-1 bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition-colors flex items-center justify-center gap-2">
                        <span class="inline-block w-4 h-4 text-white">
                            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </span>
                        Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Medicamentos -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-300">
        <div class="pr-6 pl-6 pt-6">
            <h2 class="text-xl font-semibold">
                <Pill class="w-6 h-6 inline mr-1 text-blue-800" />
                Medicamentos Registrados</h2>
            <p class="text-gray-600 mt-1">
                Total de medicamentos: {medTotal} medicamentos
            </p>
            <!-- Buscador de medicamentos -->
            <div class="mt-4">
                <input type="text" id="buscador-medicamentos" placeholder="Buscar medicamento..." class="w-full px-1 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
        </div>
        <div class="p-6">
            <!-- Tabla de medicamentos -->
            <div class="overflow-x-auto">
                <div class="max-h-72 overflow-y-auto">
                    <table class="min-w-full divide-y divide-gray-200" id="tabla-medicamentos">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden">ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Principios Activos</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Efectos</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categorías</th>
                            </tr>
                        </thead>
                        <tbody id="medicamentos-list">
                            {medicamentos.length === 0 ? (
                                <tr>
                                    <td colspan="4" class="text-center py-6 text-gray-400">No hay medicamentos registrados.</td>
                                </tr>
                            ) : (
                                medicamentos.map((m: any) => (
                                    <tr class="border-b border-gray-300 last:border-b-0 hover:bg-gray-50 transition">
                                        <td class="px-6 py-2 hidden text-sm" data-field="medicamento_id">{m.id}</td>
                                        <td class="px-6 py-2 text-sm max-w-xs break-words" data-field="medicamento_nombre">{m.nombre}</td>
                                        <td class="px-6 py-2 text-sm max-w-xs break-words" data-field="medicamento_activo">{m.activo}</td>
                                        <td class="px-6 py-2 text-sm max-w-xs break-words" data-field="medicamento_efectos">{m.efectos}</td>
                                        <td class="px-6 py-2 text-sm max-w-xs break-words" data-field="medicamento_categorias">{m.categorias}</td>
                                    </tr>
                                ))
                            )}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Paginación medicamentos -->
            <div class="flex justify-center items-center">
                <a href={`?medPage=${medPage - 1 > 0 ? medPage - 1 : 1}&sintPage=${sintPage}&relPage=${relPage}`} class={`px-3 py-1 rounded ${medPage === 1 ? "bg-gray-200 text-gray-400 cursor-not-allowed" : "bg-blue-600 text-white hover:bg-blue-700"}`} tabindex={medPage === 1 ? "-1" : "0"} aria-disabled={medPage === 1}>Anterior</a>
                <span class="px-2 text-sm">Página {medPage} de {Math.max(1, Math.ceil(medTotal / PAGE_SIZE))}</span>
                <a href={`?medPage=${medPage + 1 <= Math.ceil(medTotal / PAGE_SIZE) ? medPage + 1 : medPage}&sintPage=${sintPage}&relPage=${relPage}`} class={`px-3 py-1 rounded ${medPage === Math.ceil(medTotal / PAGE_SIZE) || Math.ceil(medTotal / PAGE_SIZE) === 1 ? "bg-gray-200 text-gray-400 cursor-not-allowed" : "bg-blue-600 text-white hover:bg-blue-700"}`} tabindex={medPage === Math.ceil(medTotal / PAGE_SIZE) || Math.ceil(medTotal / PAGE_SIZE) === 1 ? "-1" : "0"} aria-disabled={medPage === Math.ceil(medTotal / PAGE_SIZE) || Math.ceil(medTotal / PAGE_SIZE) === 1}>Siguiente</a>
            </div>
        </div>
    </div>
</div>

<script type="module" src="/assets/js/Medicamentos.js"></script>